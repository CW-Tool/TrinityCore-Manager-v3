<Window x:Class="TrinityCore_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:catel="http://catel.codeplex.com"
        xmlns:viewModels="clr-namespace:TrinityCore_Manager.ViewModels"
        Title="MainWindow" Height="744" Width="1137">

    <i:Interaction.Behaviors>
        <catel:WindowBehavior x:Name="mvvmBehavior" ViewModelType="viewModels:MainWindowViewModel"/>
    </i:Interaction.Behaviors>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ribbon:Ribbon Margin="0,0,-2,10" HorizontalAlignment="Right" Width="1131" Grid.RowSpan="2">

            <ribbon:RibbonTab x:Name="SMTab" 
                              Header="Server Management">
                <ribbon:RibbonGroup x:Name="HomeGroup1" Header="Server Panel">

                    <ribbon:RibbonGroup.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" MaxWidth="300" VerticalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ribbon:RibbonGroup.ItemsPanel>

                    <ribbon:RibbonButton x:Name="StartServerButton"
                                         Label="Start Server" Foreground="Green"/>
                    <ribbon:RibbonButton x:Name="StopServerButton"
                                         Label="Stop Server" Foreground="Red"/>
                    <ribbon:RibbonButton x:Name="OpenConfigButton"
                                         Label="Open Configuration File" Foreground="Teal"/>
                </ribbon:RibbonGroup>


                <ribbon:RibbonGroup x:Name="HomeGroup2">

                    <ribbon:RibbonGroup.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" MaxWidth="500" VerticalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ribbon:RibbonGroup.ItemsPanel>

                    <ribbon:RibbonTextBox x:Name="CommandTextBox" TextBoxWidth="300" Text="{Binding ConsoleCommand}"/>
                    <ribbon:RibbonButton x:Name="ExecuteCmdButton" Label="Execute Command" Command="{Binding ExecuteConsoleCommand}" />

                </ribbon:RibbonGroup>


            </ribbon:RibbonTab>

            <ribbon:RibbonTab x:Name="CommTab" 
                              Header="Communications">

                <ribbon:RibbonGroup x:Name="CommGroup1">

                    <ribbon:RibbonRadioButton x:Name="AnnRadioButton" Label="Server Announcement"/>
                    <ribbon:RibbonRadioButton x:Name="SNotifRadioButton" Label="Server Notification"/>
                    <ribbon:RibbonRadioButton x:Name="AGMRadioButton" Label="Announcement to GMs"/>
                    
                    <ribbon:RibbonTextBox x:Name="MessageRibbonTextBox" TextBoxWidth="700"/>
                    <ribbon:RibbonButton x:Name="SendMessageButton" Label="Send Message"/>

                </ribbon:RibbonGroup>

            </ribbon:RibbonTab>

        </ribbon:Ribbon>

        <!--<ListBox HorizontalAlignment="Left" Height="245" Margin="239,244,0,0" VerticalAlignment="Top" Width="338"
                 ItemsSource="{Binding TheAccounts}">

            <ListBox.ItemTemplate>

                <DataTemplate>
                    <TextBlock Text="{Binding Username}"></TextBlock>
                </DataTemplate>

            </ListBox.ItemTemplate>

        </ListBox>


        <Button Content="Button" Margin="634,380,370,276" Command="{Binding SearchForAccountCommand}" />-->

    </Grid>
</Window>
