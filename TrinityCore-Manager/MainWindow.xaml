<Window x:Class="TrinityCore_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:catel="http://catel.codeplex.com"
        xmlns:viewModels="clr-namespace:TrinityCore_Manager.ViewModels"
        Title="MainWindow" Height="744" Width="1137">

    <i:Interaction.Behaviors>
        <catel:WindowBehavior x:Name="mvvmBehavior" ViewModelType="viewModels:AccountsViewModel"/>
    </i:Interaction.Behaviors>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ribbon:Ribbon Margin="0,0,-2,10" HorizontalAlignment="Right" Width="1131" Grid.RowSpan="2">

            <ribbon:RibbonTab x:Name="HomeTab" 
                              Header="Home">
                <ribbon:RibbonGroup x:Name="HomeGroup1" Header="Server Management">

                    <ribbon:RibbonGroup.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" MaxWidth="300" VerticalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ribbon:RibbonGroup.ItemsPanel>

                    <ribbon:RibbonButton x:Name="StartServerButton"
                                         Label="Start Server" Foreground="Green"/>
                    <ribbon:RibbonButton x:Name="StopServerButton"
                                         Label="Stop Server" Foreground="Red"/>
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>

        </ribbon:Ribbon>
        <ListBox HorizontalAlignment="Left" Height="245" Margin="239,244,0,0" VerticalAlignment="Top" Width="338"
                 ItemsSource="{Binding TheAccounts}">

            <ListBox.ItemTemplate>

                <DataTemplate>
                    <TextBlock Text="{Binding Username}"></TextBlock>
                </DataTemplate>

            </ListBox.ItemTemplate>

        </ListBox>


        <Button Content="Button" Margin="634,380,370,276" Command="{Binding SearchForAccountCommand}" />

    </Grid>
</Window>
